{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "tag schema",
  "description": "JSON representation of a TAGML schema",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9]+$": {
      "$ref": "#/definitions/hierarchy"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "hierarchy": {
      "title": "hierarchy",
      "description": "markup subtree",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "$ref": "#/definitions/hierarchy"
        }
      },
      "additionalProperties": false
    }
  }
}
